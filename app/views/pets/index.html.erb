<h1>Listing pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Colour</th>
      <th>Owner name</th>
      <th>Identifying characteristics</th>
      <th>Special instructions</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.colour %></td>
        <td><%= pet.owner_name %></td>
        <td><%= simple_format pet.identifying_characteristics %></td>
        <td><%= simple_format pet.special_instructions %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', pets_path, method: :create %>
